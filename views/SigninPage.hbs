<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css" />

  <link rel="stylesheet" href="css/Login.css" />

</head>

<body>
  <header class="header">
    <nav class="nav">
      <a href="/index" class="nav_logo">Raktkosh</a>

      <button class="button" id="form-open">User Signup</button>

    </nav>
  </header>
  <section class="home">
    <div class="form_container">
      <i class="uil uil-times form_close"></i>

      <div class="form signup_form">
        <form action="/SigninPage" method="POST">
          <h2>Signup</h2>
          <div class="input_box">
            <input type="email" placeholder="Enter Email or Phone No" required name="Email" />
            <i class="uil uil-envelope-alt email"></i>
          </div>
          <div class="input_box">
            <input type="password" placeholder="Create  Password" required name="password" />
            <i class="uil uil-lock password"></i>
            <i class="uil uil-eye-slash pw_hide"></i>
          </div>

          <div class="input_box">
            <input type="password" placeholder="Confirm Password" required name="cpassword" />
            <i class="uil uil-lock password"></i>
            <i class="uil uil-eye-slash pw_hide"></i>
          </div>

          <button class="button" type="submit" value="Register">Signup Now</button>

          <div class="login_signup">
            Already have an account?
            <a href="/LoginPage" id="login">Login</a>
          </div>
        </form>
      </div>

    </div>
  </section>
  <script src="Js/Login.js"></script>
</body>

</html>